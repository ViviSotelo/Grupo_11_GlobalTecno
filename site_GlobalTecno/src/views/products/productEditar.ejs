<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head', {
        title: 'Editar'
    }) %> 

<body>
    <%- include('../partials/header') %>
    <main class="editar__main">
        <h2 class="editar">Esta editando el producto: <%= product.name %></h2>
        <form  class="formulario_editar" method="POST" action="/products/modificar/<%= product.id %>?_method=PUT">
            
                <label class="editar" for="name">Nombre: </label>
                <input class="editar" type="text" id="name" name="name" value="<%= product.name %>">

                <label class="editar" for="price">Precio: </label>
                <input class="editar" type="number" id="price" name="precio" value="<%= product.price %>">

                <label class="editar" for="priceDolar">Precio en dolares: </label>
                <input class="editar" type="number" id="priceDolar" name="precioDolar">

                <label class="editar" for="description">Descripción: </label>
                <input class="editar" type="text" name="descripcion">

                <label class="editar" for="category">Categoría: </label>
                <div class="editar_categoria">
                     <select class="editar" name="editar_category" id="">
                        <option selected>Elige uno...</option>
                        <% categories.forEach(category => { %>
                            <option value="<%= category.id %>"><%= category.name %></option>
                        <% }) %>
                       <!--  <option value="celular">Calular</option>
                        <option value="electronica">Electrónica</option>
                        <option value="accesorio">Accesorio</option> -->
                    </select>
                </div>

                <label class="editar" for="caracteristicas">Características: </label>
                <div class="editar__caracte">
                    <textarea class="editar" type="text" name="caracteristicas">Características</textarea>
                </div>

                <div class="editar__ofertas">
                    <label class="editar__ofertas" for="description">Oferta</label>
                    <input class="editar__ofertas "type="checkbox" id="ofertas" name="oferta">
    
                    <label class="editar__ofertas" for="description">Destacados</label>
                    <input class="editar__ofertas" type="checkbox" id="destacados" name="desctacado">
                </div>
                
                
                 <div class="editar__enviar__cancelar">
                    <button class="editar" type="submit">Enviar</button>
                    <button class="editar" type="reset">Cancelar</button>
                </div>
               
            
        </form>
    </main>
    <%- include('../partials/footer') %>
</body>
</html>