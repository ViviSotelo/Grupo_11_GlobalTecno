            <div class="boton-link">
                <button id="botonr" type="submit" title="registrate" name="registrate">Registrate</button>
            </div>  

                <p class="register-texto">¿Ya tenes cuenta?Inicia sesion <a href="/users/login">aca</a> </p>
  </form>
        </section>



    </main>

    <%- include('../partials/footer') %> 

